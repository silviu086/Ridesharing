<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="2dp"
        android:background="@drawable/cauta_layout_shape_8">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ID Calatorie"
                android:textSize="18dp"
                android:textColor="@color/colorSilverDarker"
                android:id="@+id/textViewCalatorieTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="23"
                android:layout_marginLeft="6dp"
                android:textSize="17dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/textViewCalatorieNumar" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:gravity="right|center_vertical"
            android:layout_gravity="right|center_vertical">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Mai multe"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/colorWhite"
                android:background="#67bbff"
                android:id="@+id/buttonDetalii" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/cont_layout_shape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/calatorii_adaugate_shape_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Punct plecare"
                android:textSize="14dp"
                android:textColor="@color/colorGray"
                android:id="@+id/textViewPunctPlecareTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Alexandria,Teleorman"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="7dp"
                android:id="@+id/textViewPunctPlecare" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/calatorii_adaugate_shape_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Punct sosire"
                android:textSize="14dp"
                android:textColor="@color/colorGray"
                android:id="@+id/textViewPunctSosireTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Turnu Magurele,Teleorman"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="7dp"
                android:id="@+id/textViewPunctSosire" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/calatorii_adaugate_shape_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Data calatorie"
                android:textSize="14dp"
                android:textColor="@color/colorGray"
                android:id="@+id/textViewDataCalatorieTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2016.06.22, 18:30"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="7dp"
                android:id="@+id/textViewDataCalatorie" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/calatorii_adaugate_shape_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Locuri"
                android:textSize="14dp"
                android:textColor="@color/colorGray"
                android:id="@+id/textViewLocuriTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="3 locuri disponibile"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="7dp"
                android:id="@+id/textViewLocuri" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/calatorii_adaugate_shape_title"
            android:id="@+id/linearLayoutCereri">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cereri primite"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/calatorii_in_asteptare_shape"
                android:textSize="16dp"
                android:textColor="@color/colorGray"
                android:id="@+id/textView46" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/cauta_layout_shape_6"
                android:id="@+id/linearLayoutFaraCereri">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nicio cerere primita"
                    android:textStyle="italic"
                    android:textSize="15dp"
                    android:id="@+id/textView52" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>