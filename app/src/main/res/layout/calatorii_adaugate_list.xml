<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutTitle">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/cauta_layout_shape_8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Calatoria 55"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:id="@+id/textviewNumarCalatorie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Adaugata pe 2016.07.08, 12:30"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/textViewData" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/cont_layout_shape">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/cauta_layout_shape_2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cereri in asteptare"
                android:textSize="15dp"
                android:textColor="#878787"
                android:id="@+id/textView36" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="4"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@drawable/cauta_layout_shape_6"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorRedLighter"
                    android:id="@+id/textViewCereriInAsteptare" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="7dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/cauta_layout_shape_2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cereri confirmate"
                android:textSize="15dp"
                android:textColor="#878787"
                android:id="@+id/textView32" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2"
                    android:textSize="16dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/cauta_layout_shape_6"
                    android:textStyle="bold"
                    android:textColor="#53a6ff"
                    android:id="@+id/textViewCereriConfirmate" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cauta_layout_shape_6">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/calatorii_adaugate_shape_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Punct plecare"
                android:textSize="15dp"
                android:textColor="@color/colorGrayDarker"
                android:id="@+id/textViewPunctPlecareTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Alexandria,Teleorman"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="7dp"
                android:id="@+id/textViewPunctPlecare" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/calatorii_adaugate_shape_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Punct sosire"
                android:textSize="15dp"
                android:textColor="@color/colorGrayDarker"
                android:id="@+id/textViewPunctSosireTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Turnu Magurele,Teleorman"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="7dp"
                android:id="@+id/textViewPunctSosire" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/calatorii_adaugate_shape_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Data calatorie"
                android:textSize="15dp"
                android:textColor="@color/colorGrayDarker"
                android:id="@+id/textViewDataCalatorieTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2016.06.22, 18:30"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="7dp"
                android:id="@+id/textViewDataCalatorie" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/calatorii_adaugate_shape_textview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Locuri"
                android:textSize="15dp"
                android:textColor="@color/colorGrayDarker"
                android:id="@+id/textViewLocuriTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="3 locuri disponibile"
                android:textSize="16dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"
                android:layout_marginLeft="7dp"
                android:id="@+id/textViewLocuri" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:background="@drawable/cauta_layout_shape_2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/calatorii_confirmate_shape"
                    android:text="Mai multe detalii"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorBlue"
                    android:textSize="14dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/buttonDetalii" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>