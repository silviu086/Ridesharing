<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cont_layout_shape"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:id="@+id/linearLayoutTitleLocatii">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/calatorii_adaugate_punct_plecare"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Turnu-Magurele - Alexandria"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            android:textStyle="italic"
            android:textColor="@color/colorGrayDarker"
            android:id="@+id/textViewTitleLocatii" />

    </LinearLayout>

</LinearLayout>